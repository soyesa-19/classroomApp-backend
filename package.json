{
  "name": "auth-backend",
  "version": "1.0.0",
  "description": "Authentication backend with file-based storage",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "cross-env  DEBUG=express:* tsx --watch server.ts",
    "dev:local": "concurrently \"firebase emulators:start --import=./mocks/seed  --debug\" \"cross-env FIRESTORE_EMULATOR_HOST='localhost:8080' tsx --watch server.ts\"",
    "build": "tsc",
    "emulator:export": "firebase emulators:export ./mocks/seed/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "firebase": "^11.5.0",
    "firebase-admin": "^13.2.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3"
  }
}
